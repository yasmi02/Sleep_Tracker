                            style="-fx-background-color: linear-gradient(from 0% 0% to 100% 0%, #e895d8, #9c7bea); -fx-text-fill: white; -fx-background-radius: 25; -fx-font-weight: 600; -fx-font-size: 16px; -fx-padding: 12 30 12 30;"
                            prefWidth="140" prefHeight="55"/>

                    <Button fx:id="stopButton" text="â–  Stop"
                            onAction="#handleStop"
                            styleClass="control-button"
                            style="-fx-background-color: rgba(59, 74, 125, 0.4); -fx-text-fill: white; -fx-background-radius: 25; -fx-font-weight: 600; -fx-font-size: 16px; -fx-border-color: rgba(255, 255, 255, 0.25); -fx-border-width: 1.5; -fx-border-radius: 25; -fx-padding: 12 30 12 30;"
                            prefWidth="140" prefHeight="55"/>
                </HBox>

                <!-- Volume Control -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="ðŸ”Š Volume" styleClass="label-small"/>
                    <Slider fx:id="volumeSlider"
                            min="0" max="100" value="50"
                            showTickMarks="true"
                            showTickLabels="true"
                            majorTickUnit="25"
                            minorTickCount="5"
                            prefWidth="300"
                            styleClass="quality-slider"/>
                </VBox>

                <!-- Sleep Timer -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="â° Sleep Timer" styleClass="label-small"/>
                    <ComboBox fx:id="timerComboBox"
                              onAction="#handleTimerChange"
                              prefWidth="200"
                              styleClass="mood-combo"/>
                </VBox>
            </VBox>

            <!-- Status Label -->
            <Label fx:id="statusLabel"
                   text="Select a sound to begin"
                   styleClass="status-label"
                   style="-fx-font-size: 16px;"/>

        </VBox>
    </center>

</BorderPane>