    </top>

    <!-- Center - Sound Selection -->
    <center>
        <VBox spacing="30" alignment="CENTER" styleClass="content-container">
            <padding>
                <Insets top="40" bottom="40" left="40" right="40"/>
            </padding>

            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <!-- SatÄ±r 0 -->
                <Button fx:id="rainButton" text="ðŸŒ§ï¸ Rain"
                        onAction="#handleRain"
                        styleClass="sound-button"
                        style="-fx-background-color: rgba(59, 74, 125, 0.35); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: 600; -fx-font-size: 17px; -fx-border-color: rgba(255, 255, 255, 0.15); -fx-border-width: 1; -fx-border-radius: 20;"
                        prefWidth="180" prefHeight="70"
                        GridPane.columnIndex="0" GridPane.rowIndex="0"/>

                <Button fx:id="oceanButton" text="ðŸŒŠ Ocean"
                        onAction="#handleOcean"
                        styleClass="sound-button"
                        style="-fx-background-color: rgba(59, 74, 125, 0.35); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: 600; -fx-font-size: 17px; -fx-border-color: rgba(255, 255, 255, 0.15); -fx-border-width: 1; -fx-border-radius: 20;"
                        prefWidth="180" prefHeight="70"
                        GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Button fx:id="forestButton" text="ðŸŒ² Forest"
                        onAction="#handleForest"
                        styleClass="sound-button"
                        style="-fx-background-color: rgba(59, 74, 125, 0.35); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: 600; -fx-font-size: 17px; -fx-border-color: rgba(255, 255, 255, 0.15); -fx-border-width: 1; -fx-border-radius: 20;"
                        prefWidth="180" prefHeight="70"
                        GridPane.columnIndex="2" GridPane.rowIndex="0"/>

                <!-- SatÄ±r 1 -->
                <Button fx:id="fireplaceButton" text="ðŸ”¥ Fireplace"
                        onAction="#handleFireplace"
                        styleClass="sound-button"
                        style="-fx-background-color: rgba(59, 74, 125, 0.35); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: 600; -fx-font-size: 17px; -fx-border-color: rgba(255, 255, 255, 0.15); -fx-border-width: 1; -fx-border-radius: 20;"
                        prefWidth="180" prefHeight="70"
                        GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                <Button fx:id="whiteNoiseButton" text="â˜ï¸ White Noise"
                        onAction="#handleWhiteNoise"
                        styleClass="sound-button"
                        style="-fx-background-color: rgba(59, 74, 125, 0.35); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: 600; -fx-font-size: 17px; -fx-border-color: rgba(255, 255, 255, 0.15); -fx-border-width: 1; -fx-border-radius: 20;"
                        prefWidth="180" prefHeight="70"
                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Button fx:id="brownNoiseButton" text="ðŸ’¨ Brown Noise"
                        onAction="#handleBrownNoise"
                        styleClass="sound-button"
                        style="-fx-background-color: rgba(59, 74, 125, 0.35); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: 600; -fx-font-size: 17px; -fx-border-color: rgba(255, 255, 255, 0.15); -fx-border-width: 1; -fx-border-radius: 20;"
                        prefWidth="180" prefHeight="70"
                        GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                <!-- SatÄ±r 2 -->
                <Button fx:id="cityButton" text="ðŸ™ï¸ City"
                        onAction="#handleCity"
                        styleClass="sound-button"
                        style="-fx-background-color: rgba(59, 74, 125, 0.35); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: 600; -fx-font-size: 17px; -fx-border-color: rgba(255, 255, 255, 0.15); -fx-border-width: 1; -fx-border-radius: 20;"
                        prefWidth="180" prefHeight="70"
                        GridPane.columnIndex="0" GridPane.rowIndex="2"/>

                <Button fx:id="cafeButton" text="â˜• Cafe"
                        onAction="#handleCafe"
                        styleClass="sound-button"
                        style="-fx-background-color: rgba(59, 74, 125, 0.35); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: 600; -fx-font-size: 17px; -fx-border-color: rgba(255, 255, 255, 0.15); -fx-border-width: 1; -fx-border-radius: 20;"
                        prefWidth="180" prefHeight="70"
                        GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Button fx:id="trainButton" text="ðŸš‚ Train"
                        onAction="#handleTrain"
                        styleClass="sound-button"
                        style="-fx-background-color: rgba(59, 74, 125, 0.35); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: 600; -fx-font-size: 17px; -fx-border-color: rgba(255, 255, 255, 0.15); -fx-border-width: 1; -fx-border-radius: 20;"
                        prefWidth="180" prefHeight="70"
                        GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                <!-- SatÄ±r 3 -->
                <Button fx:id="pianoButton" text="ðŸŽ¹ Piano"
                        onAction="#handlePiano"
                        styleClass="sound-button"
                        style="-fx-background-color: rgba(59, 74, 125, 0.35); -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: 600; -fx-font-size: 17px; -fx-border-color: rgba(255, 255, 255, 0.15); -fx-border-width: 1; -fx-border-radius: 20;"
                        prefWidth="180" prefHeight="70"
                        GridPane.columnIndex="0" GridPane.rowIndex="3"/>


                <Button fx:id="guitarButton" text="ðŸŽ¸ Guitar"
                        onAction="#handleGuitar"
