            </GridPane>

            <!-- Player Controls -->
            <VBox styleClass="card" spacing="20" alignment="CENTER">
                <padding>
                    <Insets top="25" bottom="25" left="40" right="40"/>
                </padding>

                <Label text="Player Controls" styleClass="section-title"/>

                <!-- Play/Pause/Stop -->
                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="playPauseButton" text="â–¶ Play"
                            onAction="#handlePlayPause"
